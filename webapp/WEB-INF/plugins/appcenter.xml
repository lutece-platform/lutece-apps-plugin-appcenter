<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>appcenter</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>appcenter.plugin.description</description>
    <provider>appcenter.plugin.provider</provider>
    <provider-url>http://fr.lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2017 Mairie de Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <css-stylesheets>
        <css-stylesheet>appcenter/appcenter.css</css-stylesheet>
    </css-stylesheets>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>APPCENTER_MANAGEMENT</feature-id>
            <feature-title>appcenter.adminFeature.ManageAppCenter.name</feature-title>
            <feature-description>appcenter.adminFeature.ManageAppCenter.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/appcenter/ManageApplications.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
    </admin-features>    

    <!-- XPages parameters -->
    <applications>
        <application>
            <application-id>application</application-id>
            <application-class>fr.paris.lutece.plugins.appcenter.web.ApplicationXPage</application-class>
        </application>
        <application>
            <application-id>sources</application-id>
            <application-class>fr.paris.lutece.plugins.appcenter.modules.sources.web.SourcesXPage</application-class>
        </application>
        <application>
            <application-id>openam</application-id>
            <application-class>fr.paris.lutece.plugins.appcenter.modules.openam.web.OpenamAgentsXPage</application-class>
        </application>
        <application>
            <application-id>moncomptesettings</application-id>
            <application-class>fr.paris.lutece.plugins.appcenter.modules.moncomptesettings.web.MonCompteSettingsXPage</application-class>
        </application>
        <application>
            <application-id>identitystore</application-id>
            <application-class>fr.paris.lutece.plugins.appcenter.modules.identitystore.web.IdentitystoreXPage</application-class>
        </application>
        <application>
            <application-id>notificationgru</application-id>
            <application-class>fr.paris.lutece.plugins.appcenter.modules.notificationgru.web.NotificationGruXPage</application-class>
        </application>
    </applications>

    <!-- Portlet parameters -->
    <portlets>
   </portlets>
</plug-in>
